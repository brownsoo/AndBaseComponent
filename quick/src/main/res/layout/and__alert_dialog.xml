<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center_vertical"
        android:minHeight="28dp"
        android:paddingTop="18dp"
        android:paddingBottom="6dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="18sp"
        tools:text="Discard Changes" />

    <TextView
        android:id="@+id/alert_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_light"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingBottom="6dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="16sp"
        tools:text="All changes will be ignored. Cancel anyways?" />

    <ScrollView
        android:id="@+id/custom_view_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingEnd="3dp"
        android:paddingStart="0dp"
        android:scrollbarSize="4dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarThumbVertical="@drawable/and__scrollbar"
        android:scrollbars="vertical"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingBottom="8dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="8dp">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btn_negative"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center"
            android:minHeight="36dp"
            android:minWidth="64dp"
            android:textSize="14sp"
            tools:text="ne" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btn_alternative"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center"
            android:minHeight="36dp"
            android:minWidth="64dp"
            android:textSize="14sp"
            tools:text="nu" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btn_positive"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center"
            android:minHeight="36dp"
            android:minWidth="64dp"
            android:textSize="14sp"
            tools:text="p" />
    </LinearLayout>
</LinearLayout>
