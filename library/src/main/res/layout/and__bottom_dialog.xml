<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="18dp">

    <TextView
        android:id="@+id/alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_black"
        android:gravity="center_vertical"
        android:minHeight="28dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="6dp"
        android:textColor="@color/and__ebony_clay"
        android:textSize="18sp"
        tools:text="Discard Changes" />

    <TextView
        android:id="@+id/alert_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_light"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="24dp"
        android:paddingTop="8dp"
        android:paddingRight="24dp"
        android:paddingBottom="8dp"
        android:textColor="@color/and__light_ebony_clay"
        android:textSize="16sp"
        tools:text="All changes will be ignored. Cancel anyways?" />

    <ScrollView
        android:id="@+id/custom_view_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="0dp"
        android:paddingEnd="3dp"
        android:scrollbarSize="4dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarThumbVertical="@drawable/and__scrollbar"
        android:scrollbars="vertical"
        android:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="6dp"
        android:paddingTop="8dp"
        android:paddingRight="6dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/btn_negative"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center"
            android:textColor="@color/and__bunker"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_alternative"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ne" />

        <Button
            android:id="@+id/btn_alternative"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center"
            android:textColor="@color/and__bunker"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_positive"
            app:layout_constraintStart_toEndOf="@id/btn_negative"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="nu" />

        <Button
            android:id="@+id/btn_positive"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center"
            android:textColor="@color/and__sky_dark_blue"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_alternative"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="p" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
