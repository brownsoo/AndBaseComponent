<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_black"
        android:gravity="center_vertical"
        android:minHeight="28dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="18dp"
        android:paddingBottom="6dp"
        android:textColor="@color/and__ebony_clay"
        android:textSize="18sp"
        tools:text="Discard Changes"/>

    <TextView
        android:id="@+id/alert_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_light"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:textColor="@color/and__light_ebony_clay"
        android:textSize="16sp"
        tools:text="All changes will be ignored. Cancel anyways?"/>

    <ScrollView
        android:id="@+id/custom_view_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="0dp"
        android:paddingEnd="3dp"
        android:scrollbarSize="4dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarThumbVertical="@drawable/and__scrollbar"
        android:scrollbars="vertical"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/and__white_gray"
        android:paddingLeft="6dp"
        android:paddingTop="8dp"
        android:paddingRight="6dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_negative"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                android:textColor="@color/and__light_ebony_clay"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="ne"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_alternative"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_regular"
            android:textColor="@color/and__light_ebony_clay"
            android:gravity="center"
            android:textSize="14sp"
            tools:text="nu"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_positive"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center"
            android:textSize="14sp"
            tools:text="p"/>



    </LinearLayout>
</LinearLayout>
